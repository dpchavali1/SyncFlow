rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User-specific files - only accessible by the owner
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null
        && (request.auth.uid == userId || request.auth.token.pairedUid == userId);
    }

    // MMS attachments - authenticated users only, with size limits
    match /mms_attachments/{userId}/{allPaths=**} {
      allow read: if request.auth != null
        && (request.auth.uid == userId || request.auth.token.pairedUid == userId);
      allow write: if request.auth != null
        && (request.auth.uid == userId || request.auth.token.pairedUid == userId)
        && request.resource.size < 25 * 1024 * 1024  // 25MB max
        && request.resource.contentType.matches('image/.*|video/.*|audio/.*|application/pdf');
    }

    // File transfers between paired devices
    match /file_transfers/{userId}/{allPaths=**} {
      allow read: if request.auth != null
        && (request.auth.uid == userId || request.auth.token.pairedUid == userId);
      allow write: if request.auth != null
        && (request.auth.uid == userId || request.auth.token.pairedUid == userId)
        && request.resource.size < 100 * 1024 * 1024;  // 100MB max
    }

    // Voice recordings and voicemails
    match /voice_recordings/{userId}/{allPaths=**} {
      allow read: if request.auth != null
        && (request.auth.uid == userId || request.auth.token.pairedUid == userId);
      allow write: if request.auth != null
        && (request.auth.uid == userId || request.auth.token.pairedUid == userId)
        && request.resource.size < 50 * 1024 * 1024  // 50MB max
        && request.resource.contentType.matches('audio/.*');
    }

    // Profile photos with small size limit
    match /profile_photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && (request.auth.uid == userId || request.auth.token.pairedUid == userId)
        && request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
